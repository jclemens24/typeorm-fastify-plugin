{
	"name": "typeorm-fastify-plugin",
	"version": "3.0.0",
	"description": "An updated fastify-typeorm-plugin for Fastify and Typeorm",
	"main": "./build/plugin.js",
	"types": "./build/plugin.d.ts",
	"scripts": {
		"test": "tsc && tap",
		"build": "tsc -p tsconfig.json",
		"lint": "concurrently \"npm run lint:frontend\" \"npm run lint:types\"",
		"lint:frontend": "eslint . --ignore-pattern build/**/* --fix",
		"lint:types": "tsc --noEmit",
		"format": "prettier --write \"**/*.{js,ts,md,html,json}\""
	},
	"author": "Jordan Clemens",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/jclemens24/typeorm-fastify-plugin.git"
	},
	"keywords": [
		"fastify",
		"typeorm",
		"fastify-typeorm",
		"plugin"
	],
	"homepage": "https://github.com/jclemens24/typeorm-fastify-plugin.git#readme",
	"devDependencies": {
		"@eslint/js": "^9.12.0",
		"@tapjs/typescript": "^2.0.1",
		"@types/eslint__js": "^8.42.3",
		"@types/js-yaml": "^4.0.9",
		"@types/node": "^22.7.5",
		"@types/sinon": "^17.0.3",
		"@types/tap": "^15.0.11",
		"concurrently": "^9.0.1",
		"eslint": "^9.12.0",
		"eslint-config-prettier": "^10.1.1",
		"fastify": "^5.0.0",
		"mysql2": "^3.11.3",
		"prettier": "^3.3.3",
		"sinon": "^19.0.2",
		"tap": "^21.0.0",
		"ts-node": "^10.9.2",
		"tslib": "^2.7.0",
		"typescript": "^5.6.3",
		"typescript-eslint": "^8.8.1"
	},
	"dependencies": {
		"fastify-plugin": "^5.0.1",
		"typeorm": "^0.3.20"
	},
	"exports": {
		".": "./build/plugin.js"
	},
	"tap": {
		"extends": "./.taprc",
		"tsconfig": "tsconfig.json"
	},
	"engines": {
		"node": ">=20.0.0"
	}
}
